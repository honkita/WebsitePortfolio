generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Artist {
  id                        Int         @id @default(autoincrement())
  name                      String      @unique
  aliases                   Json?
  ignoreChineseCanonization Boolean     @default(false) @map("ignoreChineseCanonization")
  SameNames                 SameNames[]
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Albums {
  id      Int    @id @default(autoincrement())
  name    String
  aliases Json?  @db.Json
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model SameNames {
  id        Int     @id @default(autoincrement())
  groupID   Int
  name      String
  albumIDs  Json    @default("[]") @db.Json
  isDefault Boolean @default(false)

  Artist Artist @relation(fields: [groupID], references: [id], onDelete: NoAction)

  @@index([groupID, name])
}
