generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Artist {
  id                        Int           @id @default(autoincrement())
  name                      String        @unique
  aliases                   Json?
  ignoreChineseCanonization Boolean       @default(false)
  ArtistAlbums              ArtistAlbum[]
  SameNames                 SameNames[]
}

model Album {
  id            Int           @id @default(autoincrement())
  name          String        @unique
  aliases       Json?
  AlbumsArtists ArtistAlbum[]
}

model ArtistAlbum {
  artistId Int
  albumId  Int
  role     Int    @default(0)
  Albums   Album  @relation(fields: [albumId], references: [id], onDelete: Cascade)
  Artist   Artist @relation(fields: [artistId], references: [id], onDelete: Cascade)

  @@id([artistId, albumId])
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model SameNames {
  id        Int     @id @default(autoincrement())
  groupID   Int
  name      String
  albumIDs  Json    @default("[]") @db.Json
  isDefault Boolean @default(false)
  Artist    Artist  @relation(fields: [groupID], references: [id], onDelete: NoAction)

  @@index([groupID, name])
}
